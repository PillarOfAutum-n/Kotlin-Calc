<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTileBackground"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/input_element_image"
        android:layout_width="@dimen/sizeIcon"
        android:layout_height="@dimen/sizeIcon"
        android:layout_centerInParent="true"
        android:tint="@color/colorImage"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_trash">
    </androidx.appcompat.widget.AppCompatImageView>

</RelativeLayout>